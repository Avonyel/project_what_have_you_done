<h1>Legislators for {{zip}}</h1>

{{# each legislators as |legislator|}}
	<div class="legislator">
		<div class="leg-photo">
			<img src="https://theunitedstates.io/images/congress/225x275/{{legislator.id}}.jpg">
		</div>
		<div class="leg-info">
			<h2><a href="/legislators/{{id}}">{{legislator.name.firstName}} {{legislator.name.lastName}}</a></h2>

			<p>{{legislator.party}} {{legislator.title}}</p>
		</div>
	</div>
{{/each}}